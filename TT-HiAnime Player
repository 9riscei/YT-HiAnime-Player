    <!-- Footer Text -->
    <div class="footer-text">Made by SirPro (totally not using chat-gpt :heh:)</div>

    <script>
        const videoUrlInput = document.getElementById('videoUrl');
        const runVideoButton = document.getElementById('runVideoButton');
        const videoPlayer = document.getElementById('videoPlayer');

        runVideoButton.addEventListener('click', () => {
            const url = videoUrlInput.value.trim();
            if (!url) {
                alert("Please paste a valid video URL.");
                return;
            }

            let videoId = extractYouTubeVideoId(url);  // Check for YouTube URL first

            if (!videoId) {
                // Check if it's a HiAnime URL
                const episodeId = extractHiAnimeEpisodeId(url);
                if (episodeId) {
                    videoPlayer.innerHTML = `
                        <iframe
                            width="100%"
                            height="100%"
                            src="https://www.hianime.com/embed/${episodeId}?autoplay=1"
                            frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                        </iframe>
                    `;
                } else {
                    alert("Invalid video URL.");
                }
                return;
            }

            // If it's a YouTube URL, embed it
            videoPlayer.innerHTML = `
                <iframe
                    width="100%"
                    height="100%"
                    src="https://www.youtube.com/embed/${videoId}?autoplay=1"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
                </iframe>
            `;
        });

        function extractYouTubeVideoId(url) {
            const regex = /(?:https?:\/\/)?(?:www\.)?(?:youtube\.com\/(?:[^\/\n\s]+\/\S+\/|(?:v|e(?:mbed)?)\/|\S*?[?&]v=)|youtu\.be\/)([a-zA-Z0-9_-]{11})/;
            const match = url.match(regex);
            return match ? match[1] : null;
        }

        function extractHiAnimeEpisodeId(url) {
            // This regular expression will look for HiAnime URLs like:
            // https://www.hianime.com/episode/episode-title/123456
            const regex = /hianime\.com\/episode\/(?:[^\/]+)\/(\d+)/;
            const match = url.match(regex);
            return match ? match[1] : null;
        }

        // Additional code for notes, timer, and settings remains the same as your original code
    </script>
